<div class="container">
  <%= link_to "Add entry", new_meal_path %>
  <table class="table">
    <caption>Meals</caption>
    <thead>
      <tr>
        <th scope="col">Type</th>
        <th scope="col">Calories</th>
        <th scope="col">Proteins</th>
        <th scope="col">Carbohydrates</th>
        <th scope="col">Fats</th>
      </tr>
    </thead>
    <tbody>
      <% @meals.each do |date, meals| %>
        <tr>
          <th><%= date %><th>
        </tr>
        <% meals.each do |meal| %>
          <tr>
            <td><%= meal.meal_type %></td>
            <td><%= meal.calories %></td>
            <td><%= meal.proteins %></td>
            <td><%= meal.carbohydrates %></td>
            <td><%= meal.fats %></td>
            <td><%= link_to "Edit", edit_meal_path(meal), id: "#{meal.id}" %></td>
            <td><%= link_to "Destroy", meal_path(meal), id: "#{meal.id}", method: :delete, data: { confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
